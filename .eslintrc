{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app"
  ],
  "plugins": [
    "html",
    "react",
    "markdown",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "globals": {
    "Promise": false
  },
  "rules": {
    "no-console": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": 1,
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "quotes": ["error", "single", {
      "allowTemplateLiterals": true
    }],
    "semi": ["error", "always"],
    "one-var": ["error", "never"],
    "no-confusing-arrow": "error",
    "no-unused-vars": ["error", {
      "ignoreRestSiblings": true
    }],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true
    }],
    "react/jsx-tag-spacing": ["error", {
      "beforeSelfClosing": "always"
    }],
    "space-infix-ops": ["error", {
      "int32Hint": false
    }]
  },
  "settings": {
    "react": {
      "version": "16.0"
    }
  }
}
